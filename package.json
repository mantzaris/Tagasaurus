{
  "name": "tagasaurus",
  "version": "0.0.1",
  "description": "Tagasaurus, Tag Your Planet",
  "main": "dist/electron/app.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:renderer\" \"npm run dev:electron\" \"cd electron && tsc -w\"",
    "package": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:electron": "cd electron && tsc",
    "build:renderer": "cd renderer && npm run build",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "npm run build:electron && electron .",
    "format": "prettier --write .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tagasaurus.app",
    "productName": "Tagasaurus",
    "directories": {
      "output": "build"
    },
    "extraResources": [
      { "from": "renderer/public/assets", "to": "assets" }
    ],
    "asarUnpack": [
      "**/sharp/**",
      "**/ffmpeg-static/**",
      "**/libsql/**"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/Taga.png"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/icons/Taga.png"
    },
    "linux": {
      "icon": "assets/icons/Taga.png",
      "maintainer": "mantzaris",
      "category": "utility",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mantzaris/Tagasaurus"
  },
  "keywords": [
    "tagging",
    "photos",
    "machine learning",
    "tagasaurus",
    "album",
    "memory",
    "memories"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mantzaris/Tagasaurus/issues"
  },
  "homepage": "https://github.com/mantzaris/Tagasaurus",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "concurrently": "^8.2.2",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.5.0",
    "@types/sharp": "^0.31.1",
    "dexie": "^4.0.11",
    "electron-reload": "^2.0.0-alpha.1",
    "ffmpeg-static": "^5.2.0",
    "file-type": "^20.4.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "libsql": "^0.5.3",
    "load-esm": "^1.0.2",
    "readdirp": "^4.1.2",
    "sharp": "^0.34.0"
  }
}
